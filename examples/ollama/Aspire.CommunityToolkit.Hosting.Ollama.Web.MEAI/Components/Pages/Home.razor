@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Ollama & Microsoft.Extensions.AI Demo</h1>

<p>Welcome to the Ollama demo using Microsoft.Extensions.AI!</p>
<p><input type="text" @bind-value="_prompt" />&nbsp;<button @onclick="GetPrompt">Ask</button></p>
<p>@_response</p>

@code {
    private string _prompt = "";
    private string _response = "";
    private List<ChatMessage> messages = new()
{
    new(ChatRole.Assistant, "You are a useful assistant")
};

    [Inject]
    public required IChatClient ChatClient { get; set; }

    private async Task GetPrompt()
    {
        if (!string.IsNullOrWhiteSpace(_prompt))
        {
            _response = "Asking Ollama...";
            bool gotResponse = false;

            messages.Add(new(ChatRole.User, _prompt));
            await foreach (var completionUpdate in ChatClient.CompleteStreamingAsync(chatMessages: messages))
            {
                if (!gotResponse)
                {
                    _response = "";
                    gotResponse = true;
                }

                if (completionUpdate.Contents.Count > 0)
                {
                    _response += completionUpdate.Contents[0].ToString();
                }

                messages.Add(new(ChatRole.Assistant, _response));
                StateHasChanged();
            }
        }
    }
}
